<UserControl x:Class="CarRepairShopSolution.UI.Win.Views.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <Button Content="View Clients" Margin="5" Padding="10" Command="{Binding ViewClientsCommand}" />
            <Button Content="View Cars" Margin="5" Padding="10" Command="{Binding ViewCarsCommand}" />
            <Button Content="Manage Clients" Margin="5" Padding="10" Command="{Binding ManageClientsCommand}" />
            <Button Content="Manage Cars" Margin="5" Padding="10" Command="{Binding ManageCarsCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
